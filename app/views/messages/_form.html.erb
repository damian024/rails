<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">

    <%=f.input :flat_id, :as => :hidden,input_html: {value: params[:id] || -1 }  %>
    <%=f.input :conversation_id, :as => :hidden,input_html: {value: params[:conversation_id] || -1 }  %>
    <%= f.input :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
