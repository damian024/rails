<p id="notice"><%= notice %></p>

<h1>Available Flats</h1>
<div class="new">Add new flat  <%= link_to '', new_flat_path, class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-plus" %></div>
<table class="table">
  <thead>
    <tr>
      <th>Size m^3</th>
      <th>Price</th>
      <th>Rooms</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td><%= flat.size %></td>
        <td><%= flat.price %></td>
        <td><%= flat.rooms %></td>
        <td class="breakable"><%= flat.description %></td>
        <td> <%= link_to '', flat , class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-search" %>
          <%= link_to '', edit_flat_path(flat), class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-pencil" %>
          <%= link_to '', flat, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-remove" %></td
      </tr>
    <% end %>
  </tbody>
</table>

<br>


